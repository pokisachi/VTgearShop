@model IEnumerable<Product>

<a href="/product/add" class="btn btn-primary mb-3">Add Product</a>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ProductName</th>
            <th>ProductAlias</th>
            <th>CategoryId</th>
            <th>Price</th>
            <th>Image</th>
            <th>ProductDate</th>
            <th>SaleOff</th>
            <th>Viewed</th>
            <th>Description</th>
            <th>SupplierId</th>
            <th>Command</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
       <tr>
            <td>@item.ProductName</td>
            <td>@item.ProductAlias</td>
            <td>@item.CategoryId</td>
            <td>@item.Price</td>
            <td>
                <img src="/images/@(string.IsNullOrEmpty(item.Image) ? "placeholder.png" : item.Image)" 
                     alt="@item.ProductName" 
                     style="max-width: 100px; max-height: 100px;" />
            </td>
            <td>@item.ProductDate.ToString("yyyy-MM-dd")</td>
            <td>@item.SaleOff</td>
            <td>@item.Viewed</td>
            <td>@item.Description</td>
            <td>@item.SupplierId</td>
            <td>
                <a href="/product/edit/@item.ProductId" class="btn btn-warning btn-sm">Edit</a>
                <a href="/product/delete/@item.ProductId" class="btn btn-danger btn-sm"
                    onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
            </td>
       </tr>
    }
    </tbody>
</table>
