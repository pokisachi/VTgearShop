@model IEnumerable<Product>
@{
    ViewData["Title"] = ViewBag.Category.CategoryName;
}

<div class="row g-4">
    <div class="col-lg-3">
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="mb-3">
                    <h4>Categories</h4>
                    <ul class="list-unstyled fruite-categorie list-group">
                    @foreach (Category item in ViewBag.Categories){
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between fruite-name">
                                <a a href="/home/category/@item.CategoryId">@item.CategoryName</a>
                            </div>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="row g-4 justify-content-center">
            @foreach (var item in Model){
            <div class="col-md-6 col-lg-6 col-xl-4">
                <div class="rounded position-relative fruite-item">
                    <div class="fruite-img">
                        <img src="/images/products/@item.Image" class="img-fluid w-100 rounded-top" alt="@item.ProductName">
                    </div>
                    <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                        <h4>
                            <a href="/home/details/@item.ProductId" class="text-decoration-none">
                                @item.ProductName
                            </a>
                        </h4>
                        <div class="d-flex justify-content-between flex-lg-wrap">
                            <p class="text-dark fs-5 fw-bold mb-0"> @String.Format("{0:N0} VNĐ", @item.Price * 1000)</p>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>


