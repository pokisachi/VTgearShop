@model Invoice

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Edit Invoice</h2>

            <form method="post">
                <input type="hidden" asp-for="InvoiceId" />

                <div class="mb-3">
                    <label for="InvoiceDate" class="form-label">Invoice Date</label>
                    <input type="date" class="form-control" asp-for="InvoiceDate" name="InvoiceDate" />
                </div>

                <div class="mb-3">
                    <label for="Fullname" class="form-label">Full Name</label>
                    <input type="text" class="form-control" asp-for="Fullname" name="Fullname" />
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="Email" name="Email" />
                </div>

                <div class="mb-3">
                    <label for="Phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" asp-for="Phone" name="Phone" />
                </div>

                <div class="mb-3">
                    <label for="Address" class="form-label">Address</label>
                    <input type="text" class="form-control" asp-for="Address" name="Address" />
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
